# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================

# Opción 1: SQLite local (por defecto, comentar o dejar vacío DATABASE_URL)
# No requiere configuración adicional, se crea automáticamente
# DATABASE_URL=

# Opción 2: PostgreSQL/Supabase (descomentar y configurar)
# DATABASE_URL=postgresql://usuario:contraseña@host:5432/database

# Opción 3: PostgreSQL local
# DATABASE_URL=postgresql://postgres:tu_password@localhost:5432/vr_analytics

# ============================================
# CONFIGURACIÓN DE FLASK
# ============================================

FLASK_SECRET_KEY=tu_clave_secreta_aqui_cambiar_en_produccion
FLASK_ENV=development

# ============================================
# CONFIGURACIÓN DE LOGGING
# ============================================

LOG_LEVEL=INFO

