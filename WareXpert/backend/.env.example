# WareXpert Backend Environment Variables
# Copy this file to .env and fill in your values

# ===== Flask Configuration =====
FLASK_APP=app.py
FLASK_ENV=development  # development, production, testing
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True

# ===== Database Configuration =====
DATABASE_URL=postgresql://warexpert:warexpert123@localhost:5432/warexpert_db
# For Docker: postgresql://warexpert:warexpert123@db:5432/warexpert_db

# ===== Redis Configuration =====
REDIS_URL=redis://localhost:6379/0
# For Docker: redis://redis:6379/0

# ===== JWT Configuration =====
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=900  # 15 minutes in seconds
JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 days in seconds

# ===== CORS Configuration =====
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===== File Upload =====
# Local storage (development)
UPLOAD_FOLDER=uploads
MAX_UPLOAD_SIZE=5242880  # 5 MB in bytes

# AWS S3 (production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=warexpert-files
AWS_REGION=us-east-1

# ===== Email Configuration =====
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@warexpert.com
EMAIL_FROM_NAME=WareXpert

# ===== Payment Gateway =====
# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key

# Stripe (alternative)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# ===== Courier Integration =====
CHILEXPRESS_API_KEY=your-chilexpress-key
STARKEN_API_KEY=your-starken-key

# ===== Rate Limiting =====
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# ===== Celery Configuration =====
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# ===== Logging =====
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/warexpert.log

# ===== Multi-Tenancy =====
DEFAULT_TENANT=demo
ENABLE_SUBDOMAIN_ROUTING=False

# ===== Application Settings =====
DEFAULT_TIMEZONE=America/Santiago
DEFAULT_CURRENCY=CLP
TAX_RATE=19  # IVA percentage
QUOTE_VALID_DAYS=7  # Default quote validity in days
